::# check mpr
::#
echo "=============================="
echo "#                            #"
echo "#       checking mpr         #"
echo "#                            #"
echo "=============================="

if exist "%binpath%/mpr.exe" (
	echo "The executable file named mpr is located under : %binpath%/mpr.exe"
) else (
	echo "You should probably build mpr before running the tests..."
	exit 1		
