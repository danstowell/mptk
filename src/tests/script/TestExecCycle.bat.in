diff -b -I 'exampleBook' -I 'test_mpview' -I 'WARNING' %currentpath%/log_mpview.log %refsourcepath%/log_mpview.ref > NUL 2> NUL
if ERRORLEVEL== 0 (
  echo "  mpview -- test -- The current log is similar to the reference log. Test passed successfully."
