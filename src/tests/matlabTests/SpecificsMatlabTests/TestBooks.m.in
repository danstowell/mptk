disp('----------------------------------------------');
disp('Testing the books using bookread and bookwrite');
disp('----------------------------------------------');

disp('... Verifying the presence of the book example...');
if exist('@MPTK_BINARY_DIR@/mptk/reference/@MPTK_EXAMPLE_BOOK_FILENAME@') == 0
	disp('Error : The following book example file does not exist : @MPTK_BINARY_DIR@/mptk/reference/@MPTK_EXAMPLE_BOOK_FILENAME@')
	exit;
end

try
	booktest = bookread('@MPTK_BINARY_DIR@/mptk/reference/@MPTK_EXAMPLE_BOOK_FILENAME@')
catch err
	disp('Error during the "bookread" test')
	exit;
end

try
	bookwrite(booktest,'@MPTK_BINARY_DIR@/mptk/reference/@MPTK_EXAMPLE_BOOK_WRITE_FILENAME@')
catch err
	disp('Error during the "bookwrite" test')
	exit;
end