disp('');
disp('where configFileName is the desired value of the variable.');
disp('');
disp('(press enter to continue)');pause;
disp('Let us do it for the current session:');
disp('');
disp(['  setenv(''MPTK_CONFIG_FILENAME'',' configFileName ')' ]);
